$TTL 2d

$ORIGIN {{ domain }}.

@                   IN      SOA     ns.{{ domain }}.   info.{{ domain }}. (
                                    {{ serial_num }}          ; serial
                                    12h                 ; refresh
                                    15m                 ; retry
                                    3w                  ; expire
                                    2h                  ; minimum ttl
                                    )

                    IN      NS      ns.{{ domain }}.

ns                  IN      A       {{ ansible_host }}

; -- hosts

{% for item in servers %}
{{ item.hostname }}  IN      A       {{ item.ansible_host }}
{% endfor %}

; -- container rules

{% for item in containers %}
{% if 'dns_list' in item %}
{% for item2 in item.dns_list %}
{{ item2 }}
{% endfor %}
{% endif %}
{% endfor %}
